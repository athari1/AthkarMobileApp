<resources>

    <style name="ControlLabel" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/abc_text_size_subhead_material</item>
    </style>

    <style name="ControlLabelIcon">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:textColor">#00FF00</item>
    </style>

    <style name="IconButton" parent="ControlLabelIcon">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="HeadingDivider" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/divider</item>
        <item name="android:textColor">@color/caption</item>
        <item name="android:paddingLeft">@dimen/keyline_1</item>
        <item name="android:paddingRight">@dimen/keyline_3_from_end</item>
    </style>

    <style name="Theme.AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomThemeActionBarTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
</resources>